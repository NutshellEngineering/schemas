{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nutshellengineering.github.io/schemas/payments/plans/v1/schema.json",
  "title": "Payments Plans Catalog",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "plans"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "plans": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/plan"
      }
    }
  },
  "$defs": {
    "plan": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "plan",
        "entitlement",
        "stripe-price-id",
        "name",
        "interval",
        "amount-display"
      ],
      "properties": {
        "plan": {
          "type": "string",
          "pattern": "^[A-Z0-9_]+$",
          "minLength": 3
        },
        "entitlement": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "TIER_1"
          ]
        },
        "stripe-price-id": {
          "type": "string",
          "pattern": "^price_[A-Za-z0-9]+$",
          "minLength": 7
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "interval": {
          "type": "string",
          "enum": [
            "month",
            "year"
          ]
        },
        "amount-display": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
