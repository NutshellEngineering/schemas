{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Categories",
    "description": "A list of categories and subcategories.",
    "type": "object",
    "properties": {
        "categories": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "subcategories": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "format": "uuid"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "required": ["id", "name", "description"]
                        }
                    }
                },
                "required": ["id", "name", "description"]
            }
        }
    },
    "required": ["categories"]
}